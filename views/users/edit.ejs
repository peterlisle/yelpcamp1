<%- include('../partials/headerFormPage') %>
	<div class="container">
		<div class="row form-page">
		<div class="col-md-2 col-lg-3"></div>
		<div class="col-md-8 col-lg-6">
			<h2>Edit <%= user.username %></h2>
			<form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="username">Email*</label>
					<input class="form-control" required="required" type="email" name="user[email]" value="<%= user.email %>">
				</div>
				<div class="form-group">
					<label for="username">Username*</label>
					<input class="form-control" required="required" type="text" name="user[username]" value="<%= user.username %>">
				</div>
				<div class="form-group">
					<label for="image">Profile pic*</label>
					<input type="file" id="image" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<label for="firstName">First name</label>
					<input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
				</div>
				<div class="form-group">
					<label for="lastName">Last name</label>
					<input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
				</div>

				<div class="form-group">
					<label for="bio">Bio</label>
					<textarea name="user[bio]" class="form-control" type="text" maxlength="500"><%= user.bio %></textarea>
				</div>
				<div class="form-group">
					<label for="hometown">Hometown</label>
					<input class="form-control" type="text" name="user[homeTown]" value="<%= user.homeTown %>">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-block btn-primary">Submit</button>
				</div>
				<div class="col-md-2 col-lg-3"></div>
			</form>
			<div class="go-back">
				<a href="/users/<%= user._id %>">Go back</a>
			</div>
		</div>
	</div>
<%- include('../partials/footer') %>
