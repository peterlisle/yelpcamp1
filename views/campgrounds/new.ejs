<%- include('../partials/headerFormPage') %>
	<div class='container'>
		<div class="row form-page">
		<div class="col-md-2 col-lg-2"></div>
		<div class="col-md-8 col-lg-8">
			<h2>Create a new campground</h2>
			<form action="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="name">Campsite name</label>
					<input name="name" type="text" class="form-control" placeholder="Cloud's Rest">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input type="file" class="form-control-file" id="image" name="image" accept="image/*" required>
				</div>
				<div class="form-group">
					<label for="price">Per night</label>
					<input name="price" type="number" class="form-control" placeholder='9.99' min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea name="description" rows="8" class="form-control" cols="80" placeholder='description'></textarea>
				</div>
				<div class="form-row">
					<div class="col form-group">
				    <label for="beginning">Start of high season</label>
				    <select class="form-control" name="start">
				      <option selected>January</option>
				      <option>February</option>
				      <option>March</option>
				      <option>April</option>
							<option>May</option>
							<option>June</option>
							<option>July</option>
							<option>August</option>
							<option>September</option>
							<option>October</option>
							<option>November</option>
							<option>December</option>
				    </select>
				  </div>
					<div class="col form-group">
				    <label for="end">End of high season</label>
				    <select class="form-control" name="end">
							<option selected>January</option>
 						 	<option>February</option>
 						 	<option>March</option>
 						 	<option>April</option>
 						 	<option>May</option>
 						 	<option>June</option>
 						 	<option>July</option>
 						 	<option>August</option>
 						 	<option>September</option>
 						 	<option>October</option>
 						 	<option>November</option>
 						 	<option>December</option>
				    </select>
				  </div>
				</div>
				<p id="toggle-amenities">Amenities <i class="fas fa-caret-down"></i><i id="up-arrow" class="fas fa-caret-up"></i></p>
				<div class="container">
					<div id="amenities" class="row">
						<div class="col-4">
							<div>
								<input type="checkbox" name="wifi">
								<label for="wifi">Wifi</label>
							</div>
							<div>
								<input type="checkbox" 	name="breakfast">
								<label for="breakfast">Breakfast included</label>
							</div>
							<div>
								<input type="checkbox" name="tp">
								<label for="tp">Toilet paper</label>
							</div>
							<div>
								<input type="checkbox" 	name="privateRooms">
								<label for="privateRooms">Private rooms</label>
							</div>
						</div>
						<div class="col-4">
							<div>
								<input type="checkbox" name="laundry">
								<label for="laundry">Laundry</label>
							</div>
							<div>
								<input type="checkbox" 	name="restaurant">
								<label for="restaurant">Restaurant</label>
							</div>
							<div>
								<input type="checkbox" name="bar">
								<label for="bar">Bar</label>
							</div>
							<div>
								<input type="checkbox" 	name="music">
								<label for="music">Live music</label>
							</div>
						</div>
						<div class="col-4">
							<div>
								<input type="checkbox" name="vegan">
								<label for="vegan">Vegan friendly</label>
							</div>
							<div>
								<input type="checkbox" 	name="celiac">
								<label for="celiac">Celiac friendly</label>
							</div>
							<div>
								<input type="checkbox" name="vibes">
								<label for="vibes">Good vibes</label>
							</div>
							<div>
								<input type="checkbox" 	name="storage">
								<label for="storage">Bag storage</label>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group">
    				<label for="location">Location</label>
    				<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
				</div>
				<div class="form-group">
					<label class="sr-only" for="website">Website</label>
						<div class="input-group mb-2">
							<div class="input-group-prepend">
								<div class="input-group-text">http://</div>
							</div>
							<input type="text" class="form-control" name="website" placeholder="muirsplace.com">
					 </div>
				</div>
				<button type="submit" class="btn btn-block btn-primary">Submit</button>
			</form>
			<div class="go-back">
				<a href="/campgrounds">Go back</a>
			</div>
		</div>
		<div class="col-md-2 col-lg-2"></div>
	</div>
<script type="text/javascript" src="/scripts/scripts.js"></script>
<%- include('../partials/footer') %>
